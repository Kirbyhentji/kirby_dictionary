    'zoonosis': 'An infectious disease that can be transmitted between animals and humans, either directly or indirectly, typically caused by bacteria, viruses, parasites, or fungi.',
    'zooplankton': 'Small animals or organisms that drift in water bodies, including microscopic protozoans, small crustaceans, and larval stages of larger animals, forming a vital component of aquatic food webs.',
        };

        var definition = dictionary[word.toLowerCase()];

        if (definition) {
            var definitionContainer = document.createElement('div');
            definitionContainer.classList.add('box-container');

            var definitionHeading = document.createElement('h2');
            definitionHeading.textContent = word;

            var definitionText = document.createElement('p');
            definitionText.textContent = ''; 

            definitionContainer.appendChild(definitionHeading);
            definitionContainer.appendChild(definitionText);

            document.getElementById('definition').innerHTML = '';
            document.getElementById('definition').appendChild(definitionContainer);

            var index = 0;
            var typingInterval = setInterval(function() {
                definitionText.textContent += definition.charAt(index);
                index++;
                if (index > definition.length) {
                    clearInterval(typingInterval);
                    document.getElementById('diary').classList.add('active');
                    saveDiaryEntry(word);
                  
                    document.getElementById('diary').style.display = 'block';
                }
            }, 50);
        } else {
            document.getElementById('definition').textContent = 'Definition not found.';
         
            document.getElementById('diary').classList.remove('active');
           
            document.getElementById('diary').style.display = 'none';
        }
    }

    function addEntry() {
        var entryContent = document.getElementById('newEntry').value;

        if (entryContent.trim() !== '') {
            var entryDiv = document.createElement('div');
            entryDiv.classList.add('entry');

            var boxDiv = document.createElement('div');
            boxDiv.classList.add('box-container');
            boxDiv.textContent = entryContent;

            entryDiv.appendChild(boxDiv);

            var deleteButton = document.createElement('button');
            deleteButton.textContent = 'Delete';
            deleteButton.classList.add('delete-button');
            deleteButton.onclick = function () {
                deleteEntry(entryDiv);
            };

            entryDiv.appendChild(deleteButton);

            document.getElementById('diaryEntries').appendChild(entryDiv);

            document.getElementById('newEntry').value = '';
        } else {
            alert('Please write something in the entry!');
        }
    }

    function deleteEntry(entryDiv) {
        entryDiv.remove();
    }

    function saveDiaryEntry(term) {
        var entryContent = document.getElementById('newEntry').value;

        if (entryContent.trim() !== '') {
            console.log('Saving diary entry:', entryContent, 'under term:', term);

            var entries = JSON.parse(localStorage.getItem('diaryEntries')) || {};
            console.log('Existing entries for term:', entries[term.toLowerCase()]);

            entries[term.toLowerCase()] = entries[term.toLowerCase()] || [];
            entries[term.toLowerCase()].push(entryContent);
            console.log('Updated entries for term:', entries[term.toLowerCase()]);

            localStorage.setItem('diaryEntries', JSON.stringify(entries));
        }
    }

    function resetDictionary() {
        document.getElementById('definition').innerHTML = '';
        document.getElementById('wordInput').value = '';
        document.getElementById('diary').style.display = 'none';
    }
    </script>
</body>

